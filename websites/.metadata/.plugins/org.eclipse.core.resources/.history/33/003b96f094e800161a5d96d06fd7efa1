var ctx = document.getElementById("ctx").getContext("2d");

// player
var x = 50;
var spdX = 15*Math.random();
var y = 40;
var spdY = 12*Math.random();
var name = "Thea";

var gameHeight = 500;
var gameWidth = 500;
var rightSpacing = 75;
var topSpacing = 25;

ctx.font = '30px Arial';
ctx.fillStyle = "#FF0000";
//ctx.fillText('P', x, y);

function update() {
	x += spdX;
	y += spdY;
	if(x >= gameWidth-rightSpacing || x <= 10) {
		//spdX = -spdX;
		//spdX = spdX*-1;
		spdX *= -1;
	}
	if(y >= gameHeight || y <= topSpacing) {
		spdY *= -1;
	}
	ctx.clearRect(0, 0, gameWidth, gameHeight);
	ctx.fillText(name, x, y);
	//console.log('I am inside update: x = ',x,' y = ',y);
}

//update();
setInterval(update,50);
